<div class="form-horizontal">
  <%= form_with model: @transaction do |form| %>
    
  <div class="form-group">
    <%= form.label :account, "Amount to transfer", class: "col-md-4 control-label" %>
      <div class="col-md-8">
       <%= form.text_field :account_no, class: "form-control" %><br />
      </div>
  </div>


  <div class="form-group">
    <%= form.label :amount0, "Amount to transfer", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= form.text_field :amount, class: "form-control" %><br />
    </div>
  </div>

  <%= form.submit "Submit", class: "btn btn-success" %>
  <% end %>
  <%= link_to "Back",root_path %>
