<div class="form-horizontal">
  <%= form_with model: @transaction do |form| %>

  <div class="form-group">
    <%= form.label :account_no, "Account Number", class: "col-md-8 control-label" %>
    <div class="col-md-4">
      <%= form.text_field :account_no, class: "form-control" %><br />
    </div>
  </div>


  <div class="form-group">
    <%= form.label :amount ,"Amount", class: "col-md-8 control-label" %>
    <div class="col-md-4">
      <%= form.text_field :amount, class: "form-control" %><br/>
    </div>
  </div>

  <%= form.submit "Proceed", class: "btn btn-success" %>

  <% end %>
